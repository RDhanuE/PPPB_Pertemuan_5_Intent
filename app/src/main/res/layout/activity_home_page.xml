<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_Page"
    android:orientation="vertical"
    android:gravity="center_horizontal">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textAlignment="center"
        android:text="Homepage"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/poppins"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome,"
        android:textSize="22dp"
        android:textAlignment="center"
        android:fontFamily="@font/poppinm"
        android:layout_marginTop="40dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the name"
        android:textSize="22dp"
        android:textAlignment="center"
        android:id="@+id/name"
        android:fontFamily="@font/poppinm"
        android:textColor="#525BFF"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your email,"
            android:textSize="22dp"
            android:textAlignment="center"
            android:fontFamily="@font/poppinm"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is the email"
            android:textSize="22dp"
            android:textAlignment="center"
            android:id="@+id/email"
            android:fontFamily="@font/poppinm"
            android:textColor="#525BFF"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have been verivied"
            android:textSize="22dp"
            android:textAlignment="center"
            android:fontFamily="@font/poppinm"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your number,"
        android:textSize="22dp"
        android:textAlignment="center"
        android:fontFamily="@font/poppinm"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the number"
        android:textSize="22dp"
        android:textAlignment="center"
        android:id="@+id/number"
        android:fontFamily="@font/poppinm"
        android:textColor="#525BFF"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have been assigned"
        android:textSize="22dp"
        android:textAlignment="center"
        android:fontFamily="@font/poppinm"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/button_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Go Back"
        android:textColor="@color/white"
        android:layout_marginTop="36dp"
        android:layout_marginHorizontal="18dp"
        android:textSize="20dp"
        android:id="@+id/go_back"
        />

</LinearLayout>